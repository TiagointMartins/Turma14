package aula;

import java.util.*;
import java.lang.Math;


public class lista2Exercicio3 {

	public static void main(String[] args) {
	Scanner leia = new Scanner(System.in);
	
	int N1, N2, N3, N4 ;
	
	System.out.println("Informe o primeiro numero: ");
	N1 = leia.nextInt();
		
	System.out.println("Informe o segundo numero: ");
	N2 = leia.nextInt();		
			
	System.out.println("Informe o terceiro numero: ");
	N3 = leia.nextInt();	
			
	System.out.println("Informe o quarto numero: ");
	N4 = leia.nextInt();	
	
	 ((N3 * N3) >=1000)?System.out.print("O quadrado de N3 é: "+N3)(): System.out.println("O numero "+N1+ " ao quadrado é: "+N1*N1);
		System.out.println("O numero "+N2+ " ao quadrado é: "+N2*N2);
		System.out.println("O numero "+N3+ " ao quadrado é: "+N3*N3);
		System.out.println("O numero "+N4+ " ao quadrado é: "+N4*N4)();
	
	
	
	}
}
