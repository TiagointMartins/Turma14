package loja;
import java.util.*;
import java.lang.Math;

public class cadLoja {

	public static void main(String[] args) {
		Scanner leia=new Scanner(System.in);
		// VARIAVEIS
		
		char opcaoMenu;
		
		
		linha(70);
		System.out.println("                              Bonno Cacau");
		System.out.println("                        Felicidade, em chocolate");
		linha(70);
	
		System.out.println("\nO que deseja fazer");
		System.out.println("[1] - COMPRAR PRODUTOS\r\n");
		System.out.println("[2] - CONTROLAR ESTOQUE\r\n");
		System.out.println("[3] - SAIR\r\n");
		System.out.println();
		System.out.println("DIGITE A OPÇÃO: ");
		opcaoMenu = leia.next().charAt(0);
		
		switch (opcaoMenu)
		{
		case '1':
			
			System.out.println("Por favor, informe seu nome: ");
			String nomeCliente = leia.next().toUpperCase();
			System.out.println("Você se define como: M - MASCULINO, F - FEMININO ou O - OUTRO");
			char genero = leia.next().toUpperCase().charAt(0);
			
			
			
		}
		
		
	}

	public static void pula()
	{
		System.out.println("\n");
	}
	
	public static void linha(int tamanho )
	{
		for (int i=0 ; i < tamanho; i ++)
		{
			System.out.print("-");
		}
	
	}
}
