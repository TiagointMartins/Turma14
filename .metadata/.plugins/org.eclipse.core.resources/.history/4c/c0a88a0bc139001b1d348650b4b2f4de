package  aula ;

import  java.util.Scanner ;

public  class  Lista2Exercicio5 {

	public  static  void  main ( String [] args ) {
		Scanner sc =  novo  Scanner ( Sistema . In);
		definitiva  dupla limiteInferiorAceitavel =  0,05 ;
		definitiva  dupla limiteSuperiorAceitavel = 0,25 ;
		double indicePoluicaoAtual;
		Sistema . para fora . println ( " Digite o índice de índice superior: " );
		indicePoluicaoAtual = sc . nextDouble ();
		if (indicePoluicaoAtual > = 0 ) {
			if (indicePoluicaoAtual > = limiteInferiorAceitavel && indicePoluicaoAtual <= limiteSuperiorAceitavel) {
				Sistema . para fora . println ( " Os grupos estão dentro dos parâmetros aceitáveis ​​de formuláveis. "
						+  " Portanto, podem continuar atuando. " );
			}
			else  if (indicePoluicaoAtual > =  0.3  && indicePoluicaoAtual <  0.4 ) {
				Sistema . para fora . println ( " As indústrias do 1º grupo devem suspender suas "
						+  " atividades imediatamente. " );
			}
			else  if (indicePoluicaoAtual > =  0.4  && indicePoluicaoAtual <  0.5 ) {
				Sistema . para fora . println ( " As indústrias do 1º e 2º grupo devem suspender "
						+  " suas atividades imediatamente. " );
			}
			else  if (indicePoluicaoAtual > =  0,5 ) {
				Sistema . para fora . println ( " Todas as indústrias devem suspender suas atividades "
						+  " imediatamente. " );
			}
			else {
				Sistema . para fora . println ( " Os grupos estão poluindo menos que o limite aceitável. "
						+  " Parabéns! " );
			}
		}
		else {
			Sistema . para fora . println ( " Índice inválido. " );
		}
		sc . Fechar();
	}

}